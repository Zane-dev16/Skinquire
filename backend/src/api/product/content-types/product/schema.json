{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 10,
      "default": 0,
      "required": true
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "ingredients": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::ingredient.ingredient",
      "mappedBy": "products"
    },
    "skin_conditions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::skin-condition.skin-condition",
      "mappedBy": "products"
    },
    "skin_types": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::skin-type.skin-type",
      "mappedBy": "products"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
